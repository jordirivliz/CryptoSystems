
def str2num(s): #takes as input a string of characters, capitalizes it and returns the integer obtained by concatenating the corresponding  ASCII codes
    return ZZ(''.join([str(ord(i)) for i in s.upper()]))

def num2str(m): #the inverse of the function in (a), takes as input an integer and returns the corresponding message (capitalized)
    m=str(m)
    return ''.join(chr(int(m[i:i+2])) for i in range(0,len(m),2))
    
n4 = 

e4 = 932119818531401254776932993989885423806640993383475211726623520260925684265610090969493462130403163005659367356185640211

# rsa(m) takes as input an integer m and returns the integer obtained by encrypting m using an RSA scheme with modulus n4 and encryption exponent e4
def rsa(m):
    if type(m) != Integer:
        return 'Invalid input'
    c = Integer(pow(m, e4, n4))
    return c
# Encrypt the message 'Colonel Mustard is waiting in the library' by first transforming into a number using your function str2num    
s = 'Colonel Mustard is waiting in the library'
s = str2num(s)
ciphertext = rsa(s)
print(ciphertext)

